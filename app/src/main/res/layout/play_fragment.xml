<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/click_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="189dp"
        android:layout_marginTop="100dp"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/game_bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/click_element"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="90dp" />


    <TextView
        android:id="@+id/points_textView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginEnd="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:text="@string/points_label"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/click_element"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>